:javascript
  // ajax for delete events
  // via 'on' event handler
  $("#deleteForm#{@id}").on("submit", function(event){
   event.preventDefault();
   var id = "#{@id}";

    $.ajax({
      url: "/delete",
      // we want to send the id of the event to delete
      data: id,
      success: function(data) {
        // no returning data
      }
    });
    removeEvent(id);
  });


  function removeEvent(id) {
    // see supplant function in script.js
    var toDelete = "#deleteForm{id}".supplant({id: id});
    $(toDelete).closest(".well").remove();
    // only 2 wells on site: all events removed, disable
    // file creation
    if($(".well").size() == 2) {
      $("#generateButton").attr("disabled", "disabled");
    }
  }

- rep_string = ""
- if @language == 'de'
  - if @event.repetition_interval.to_i < 2
    - if @event.repetition_freq == "DAILY" || @event.repetition_freq == "MONTHLY"
      - rep_string += "Jeden "
    - elsif @event.repetition_freq == "WEEKLY"
      - rep_string += "Jede Woche"
    - elsif @event.repetition_freq == "YEARLY"
      - rep_string += "Jedes Jahr"
    - if @event.repetition_freq == "DAILY"
      - rep_string += "Tag"
    - if @event.repetition_freq == "MONTHLY"
      - rep_string += "Monat"
  - else
    - rep_string += "Alle "
    - rep_string += @event.repetition_interval
    - if @event.repetition_freq == "DAILY"
      - rep_string += " Tage"
    - if @event.repetition_freq == "WEEKLY"
      - rep_string += " Wochen"
    - if @event.repetition_freq == "MONTHLY"
      - rep_string " Monate"
    - if @event.repetition_freq == "YEARLY"
      - rep_string " Jahre"

- if @language == 'en'
  - rep_string += "Every "
  - if @event.repetition_interval.to_i < 2
    - if @event.repetition_freq == "DAILY"
      - rep_string += "day"
    - if @event.repetition_freq == "WEEKLY"
      - rep_string += "week"
    - if @event.repetition_freq == "MONTHLY"
      - rep_string += "month"
    - if @event.repetition_freq == "YEARLY"
      - rep_string += "year"
  - else
    - rep_string += @event.repetition_interval
    - if @event.repetition_freq == "DAILY"
      - rep_string += " days"
    - if @event.repetition_freq == "WEEKLY"
      - rep_string += " weeks"
    - if @event.repetition_freq == "MONTHLY"
      - rep_string += " months"
    - if @event.repetition_freq == "YEARLY"
      - rep_string += " years"

%div.well
  %table.table
    %thead
      %tr
        %th
          - if @event.is_repeated
            %i{:class => "icon-repeat"}
        %th
          - if @language == 'de'
            Terminname
          - else
            Event name
        %th
          - if @language == 'de'
            Startdatum
          - else
            Start Date
        - if @event.start_time
          %th
            - if @language == 'de'
              Von
            - else
              Start Time
        %th
          - if @language == 'de'
            Enddatum
          - else
            End Date
        - if @event.end_time
          %th
            - if @language == 'de'
              Bis
            - else
              End Time
        %th
          - if @language == 'de'
            Ort
          - else
            Location
        %th
          - if @language == 'de'
            Beschreibung
          - else
            Description

    %body
      %tr
        %td
          = "#{rep_string}"
        %td
          = @event.name
        %td
          = @event.start_date
        - if @event.start_time
          %td
            = @event.start_time
        %td
          = @event.end_date
        - if @event.end_time
          %td
            = @event.end_time
        %td
          = @event.location
        %td
          = @event.description
  %div.offset10
    %form{ :method => "post", :id => "deleteForm#{@id}" }
      %button{ :type => 'submit', :class => 'btn btn-warning', :id => "deleteButton#{@id}" }
        - if @language == 'de'
          Entfernen
        - else
          Delete
